{
	"name": "quickplate",
	"version": "1.0.2",
	"license": "MIT",
	"bin": "dist/cli.js",
	"type": "module",
	"engines": {
		"node": ">=16"
	},
	"scripts": {
		"build": "tsc",
		"dev": "tsc --watch",
		"test": "prettier --check . && xo && ava"
	},
	"files": [
		"dist"
	],
	"author": "ams187",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/ams187/quickplate.git"
  },
	"bugs": {
    "url": "https://github.com/ams187/quickplate/issues"
  },
	"dependencies": {
		"@inkjs/ui": "^2.0.0",
		"ink": "^5.0.1",
		"ink-big-text": "^2.0.0",
		"ink-gradient": "^3.0.0",
		"meow": "^11.0.0",
		"react": "^18.2.0"
	},
	"devDependencies": {
		"@sindresorhus/tsconfig": "^3.0.1",
		"@types/ink": "^2.0.3",
		"@types/ink-big-text": "^1.2.4",
		"@types/ink-gradient": "^2.0.4",
		"@types/node": "^22.7.6",
		"@types/react": "^18.0.32",
		"@vdemedes/prettier-config": "^2.0.1",
		"ava": "^5.2.0",
		"chalk": "^5.2.0",
		"eslint-config-xo-react": "^0.27.0",
		"eslint-plugin-react": "^7.32.2",
		"eslint-plugin-react-hooks": "^4.6.0",
		"ink-testing-library": "^3.0.0",
		"prettier": "^2.8.7",
		"ts-node": "^10.9.2",
		"typescript": "^5.0.3",
		"xo": "^0.53.1"
	},
	"ava": {
		"extensions": {
			"ts": "module",
			"tsx": "module"
		},
		"nodeArguments": [
			"--loader=ts-node/esm"
		]
	},
	"xo": {
		"extends": "xo-react",
		"prettier": true,
		"rules": {
			"react/prop-types": "off"
		}
	},
	"prettier": "@vdemedes/prettier-config"
}
